<div class="col-md-10 col-md-offset-1">
	<div class="box box-primary">
		<div class="box-header with-border">
			<h3><%= @article.title%></h3>
		</div>
		<div class="box-body">
			<p><%= @article.body%></p>
		</div>
		<div class="box-footer">
			<h4>Comments:</h4>
			<%= render 'comment', collection: @article.comments%><br>
			<%= render 'comments/form' %>
		</div>
		<div class="box-footer">
			<%= link_to 'Back to Articles List',articles_path, class: 'btn btn-warning' %>
		</div>
	</div>	
</div>