<div class="col-md-10 col-md-offset-1">
	<div class="box box-primary">
		<div class="box-header with-border">
			<h4>Business and Life Adventure of a Woman</h4>
		</div>
		<div class="body">
			<table class="table table-hover">
				<%@articles.each do |article| %>
					<tr>
						<td>
							<h6 class="pull-right">
							<%= link_to 'Edit', edit_article_path(article) %> |
							<%= link_to 'Delete', article, method: :Delete, data: { confrim: 'Are you sure?' } %>
							</h6>
							<h3><%= link_to article.title, article %></h3>
							<p><%= article.body %></p>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
		<div class="box-footer">
			<%= link_to 'New Articles', new_article_path(@article), class: 'btn btn-lg btn-primary text-yellow pull-right' %>
		</div>
	</div>
</div>

