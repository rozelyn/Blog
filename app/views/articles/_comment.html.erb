<ul class="timeline">
	<% @article.comments.each do |comment| %>
		<li>
			<div class="timeline-item">
				<span class="time">
					<%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
				</span>
				<div class="timeline-body">
					<h5><span class="text-olive"><%= comment.author_name %></span></h5>
					<p><%= comment.content %></p>
				</div>
			</div>
		</li>		
	<% end %>
</ul>